
  <% answers.each do |answer| %>
    <button type="submit" name="starred" value="star_answer" class="fa fa-star-o star-button"></button>
    <form method="post" action='/questions/<%= answer.question.id %>/answers/<%= answer.id %>/star' class="star-form">
      <input type="hidden" name ="_method" value="put"></input>
    </form>
    <form action="/questions/<%= answer.question_id %>/answers/<%= answer.id %>/votes" method="get">
        <button class="fa fa-sort-desc up-vote-button vote-button" name="upVote" type="submit"></button>
        <button class="fa fa-sort-asc down-vote-button vote-button" name="downVote" type="submit"></button>
    </form><%= answer.votes.count %>
    <p><%= answer.answer %></p>
    <span class="author">-<%= answer.user.username %></span>
  <% end %>
